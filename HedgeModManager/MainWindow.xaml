<Window x:Class="HedgeModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HedgeModManager"
        mc:Ignorable="d"
        Title="HedgeModManager" Height="600" Width="560" Background="#FF2D2D30">
    <Window.Resources>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#FF2D2D30"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,110">
            <TabItem Header="Mods">
                <ListView x:Name="ModsList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="White">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Title}" IsChecked="{Binding Enabled}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Version"       Width="100" DisplayMemberBinding="{Binding Version}"/>
                            <GridViewColumn Header="Author"        Width="100" DisplayMemberBinding="{Binding Author}"/>
                            <GridViewColumn Header="Supports Save" Width="90"  DisplayMemberBinding="{Binding SupportsSave}"/>
                            <GridViewColumn Header="Updates"       Width="70"  DisplayMemberBinding="{Binding HasUpdates}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Codes">
                <Grid/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid/>
            </TabItem>
        </TabControl>
        <StackPanel VerticalAlignment="Bottom" >
            <Grid Margin="10,0,10,10" VerticalAlignment="Bottom" Height="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.45*"/>
                    <RowDefinition Height="0.6*"/>
                </Grid.RowDefinitions>
                
                <Button Content="Remove Mod"                    Grid.Column="0" Margin="5"/>
                <Button Content="Refresh Mod List" Width="Auto" Grid.Column="1" Margin="5"/>
                <Button Content="Add Mod" Width="Auto"          Grid.Column="2" Margin="5"/>
                <!-- i want sharp bois-->
                <!-- Wow rude-->
                <Button Content="Save"                          Grid.Column="0" Grid.Row="1" Margin="5"/>
                <Button Content="Save and Play" Width="Auto"    Grid.Column="1" Grid.Row="1" Margin="5"/>
                <Button Content="Play" Width="Auto"             Grid.Column="2" Grid.Row="1" Margin="5"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
