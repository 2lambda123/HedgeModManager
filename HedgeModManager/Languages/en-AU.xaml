<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Common UI Strings -->
    <system:String x:Key="CommonUIClose"  >Close</system:String>
    <system:String x:Key="CommonUIOK"     >OK</system:String>
    <system:String x:Key="CommonUICancel" >Cancel</system:String>
    <system:String x:Key="CommonUIYes"    >Yes</system:String>
    <system:String x:Key="CommonUINo"     >No</system:String>
    <system:String x:Key="CommonUIUpdate" >Update</system:String>
    <system:String x:Key="CommonUIDelete" >Delete</system:String>
    <system:String x:Key="CommonUINone"   >None</system:String>
    <system:String x:Key="CommonUIIgnore" >Ignore</system:String>
    <system:String x:Key="CommonUIWarning">WARNING</system:String>

    <!-- Main UI Strings -->
    <system:String x:Key="MainUIMods"          >Mods</system:String>
    <system:String x:Key="MainUICodes"         >Codes</system:String>
    <system:String x:Key="MainUISettings"      >Settings</system:String>
    <system:String x:Key="MainUIRemoveMod"     >Remove Mod</system:String>
    <system:String x:Key="MainUIAddMod"        >Add Mod</system:String>
    <system:String x:Key="MainUIRefreshModList">Refresh Mod List</system:String>
    <system:String x:Key="MainUISave"          >Save</system:String>
    <system:String x:Key="MainUISaveAndPlay"   >Save and Play</system:String>
    <system:String x:Key="MainUIPlay"          >Play</system:String>

    <!-- Mods UI Strings -->
    <system:String x:Key="ModsUIName"           >Name</system:String>
    <system:String x:Key="ModsUIVersion"        >Version</system:String>
    <system:String x:Key="ModsUIAuthor"         >Author</system:String>
    <system:String x:Key="ModsUISupportSave"    >Supports Save</system:String>
    <system:String x:Key="ModsUIHasUpdate"      >Updates</system:String>
    <system:String x:Key="ModsUIModDescription" >Description</system:String>
    <system:String x:Key="ModsUIModConfigure"   >Configure mod</system:String>
    <system:String x:Key="ModsUIModOpenFolder"  >Open containing folder</system:String>
    <system:String x:Key="ModsUIModCheckUpdates">Check for updates</system:String>
    <system:String x:Key="ModsUIModEdit"        >Edit mod</system:String>
    <system:String x:Key="ModsUIModDelete"      >Delete mod</system:String>
    <system:String x:Key="ModsUIModDragDrop"    >Drag and drop items to change the load order of mods.</system:String>

    <!-- Codes UI Strings -->
    <system:String x:Key="CodesUIName"    >Name</system:String>
    <system:String x:Key="CodesUIDownload">Download Community Codes</system:String>
    <system:String xml:space="preserve" x:Key="CodesUIVersionIncompatible">The installed codes are incompatible with the code loader.&#x0a;Please update the codes and the code loader.&#x0a;WARNING: This will erase any custom codes.</system:String>

    <!-- Settings UI Strings -->
    <!--   Game & Mod Loader -->
    <system:String x:Key="SettingsUIGMLHeader"      >Game &amp; Mod Loader</system:String>
    <system:String x:Key="SettingsUIInstallLoader"  >Install Mod Loader</system:String>
    <system:String x:Key="SettingsUIUninstallLoader">Uninstall Mod Loader</system:String>
    <system:String x:Key="SettingsUIOpenMods"       >Open Mods Directory</system:String>
    <system:String x:Key="SettingsUIEnableML"       >Enable mod loader</system:String>
    <system:String x:Key="SettingsUIEnableDebug"    >Enable debug console</system:String>
    <system:String x:Key="SettingsUIEnableSRedir"   >Enable save file redirection</system:String>
    <system:String x:Key="SettingsUILoadTopBottom"  >Load top to bottom</system:String>
    <system:String x:Key="SettingsUILabelLoaders"   >Loaders:</system:String>
    <system:String x:Key="SettingsUILabelGame"      >Game:</system:String>
    <system:String x:Key="SettingsUILabelMDir"      >Mods Directory:</system:String>
    <!--   Hedge Mod Manager -->
    <system:String x:Key="SettingsUIHMMHeader"      >Hedge Mod Manager</system:String>
    <system:String x:Key="SettingsUICheckMLUpdate"  >Check for mod loader updates</system:String>
    <system:String x:Key="SettingsUICheckCLUpdate"  >Check for code loader updates</system:String>
    <system:String x:Key="SettingsUICheckModUpdates">Check for mod updates</system:String>
    <system:String x:Key="SettingsUIKeepHMMOpen"    >Keep Hedge Mod Manager open after starting a game</system:String>
    <system:String x:Key="SettingsUIAboutHMM"       >About Hedge Mod Manager</system:String>
    <system:String x:Key="SettingsUILanguage"       >Language:</system:String>

