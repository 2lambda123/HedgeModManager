    <system:String x:Key="MainUIInstallFormHeader"   >Install a mod by...</system:String>
    <system:String x:Key="MainUIInstallFormOptionDir">Installing from a folder</system:String>
    <system:String x:Key="MainUIInstallFormOptionArc">Installing from an archive</system:String>
    <system:String x:Key="MainUIInstallFormOptionNew">Making one (for developers!)</system:String>
    <system:String x:Key="MainUIMissingLoaderHeader" >Mod Loader Not Yet Installed!</system:String>
    <system:String xml:space="preserve" x:Key="MainUIMissingLoaderDesc">In order for {0} to start loading mods, the mod loader needs to be installed.&#x0a;Would you like to install it now?</system:String>
    <system:String x:Key="MainUISelectModsDBTitle"   >Select where to load mods from...</system:String>

    <!-- OptionsWindow UI Strings -->
    <system:String x:Key="OptionsWindowUIError"      >Please select an option!</system:String>

    <!-- AboutWindow UI Strings -->
    <system:String x:Key="AboutWindowUITitle"  >About Hedge Mod Manager</system:String>
    <system:String x:Key="AboutWindowUILine1"  >A program designed to help people easily load Hedgehog Engine mods.</system:String>
    <system:String x:Key="AboutWindowUILine2"  >Requires a legally owned version of one of the supported games.</system:String>
    <system:String x:Key="AboutWindowUICredits">Credits:</system:String>

    <!-- EditModWindow UI Strings -->
    <system:String x:Key="EditModWindowUIHeader">Please fill out some details about your mod.</system:String>

    <!-- PropertyEditor UI Strings -->
    <system:String x:Key="PropertyEditorUIName" >Name</system:String>
    <system:String x:Key="PropertyEditorUIValue">Value</system:String>

    <!-- Status UI Strings -->
    <system:String x:Key="StatusUILoadedMods"             >Loaded {0} mods</system:String>
    <system:String x:Key="StatusUICheckingModUpdates"     >Checking for {0} updates</system:String>
    <system:String x:Key="StatusUIFailedToUpdate"         >Failed to update {0}! {1}</system:String>
    <system:String x:Key="StatusUIModUpdateCheckFinish"   >Finished checking for mod updates: {0} completed, {1} failed</system:String>
    <system:String x:Key="StatusUIStartingGame"           >Starting {0}</system:String>
    <system:String x:Key="StatusUICheckingForUpdates"     >Checking for updates</system:String>
    <system:String x:Key="StatusUINoUpdatesFound"         >No updates found</system:String>
    <system:String x:Key="StatusUIFailedToCheckUpdates"   >Failed to check for updates</system:String>
    <system:String x:Key="StatusUICheckingForLoaderUpdate">Checking for {0} updates</system:String>
    <system:String x:Key="StatusUILoaderUpToDate"         >{0} is up to date</system:String>
    <system:String x:Key="StatusUIFailedLoaderUpdateCheck">Failed to check for {0} updates</system:String>
    <system:String x:Key="StatusUIInstalledLoader"        >Installed {0}</system:String>
    <system:String x:Key="StatusUIDeletedMod"             >Deleted {0}</system:String>
    <system:String x:Key="StatusUIModsDBSaved"            >Saved mods database</system:String>
    <system:String x:Key="StatusUIModsDBLocationChanged"  >Updated database location</system:String>
    <system:String x:Key="StatusUIGameChange"             >Changed game to {0}</system:String>
    <system:String x:Key="StatusUIDownloadingCodes"       >Downloading codes for {0}</system:String>
    <system:String x:Key="StatusUIDownloadFinished"       >Download finished</system:String>
    <system:String x:Key="StatusUIDownloadFailed"         >Download failed</system:String>
    
    <!-- Dialog UI Strings -->
    <system:String xml:space="preserve" x:Key="DialogUIDeleteMod">Are you sure you want to delete "{0}"?&#x0a;This action cannot be undone!</system:String>
    
    <!-- Status UI Lang Stuff Strings -->
    <system:String x:Key="StatusUIUpdateCompletedSingular"      >completed</system:String>
    <system:String x:Key="StatusUIUpdateCompletedPlural"        >completed</system:String>
    <system:String x:Key="StatusUIUpdateFailedSingular"         >failed</system:String>
    <system:String x:Key="StatusUIUpdateFailedPlural"           >failed</system:String>

    <!-- Mod Config UI Strings -->
    <system:String x:Key="ModConfigUITitle">Configure {0}</system:String>

</ResourceDictionary>